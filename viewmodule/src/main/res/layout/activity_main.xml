<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDragGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/draggable_grid" />

        <Button
            android:id="@+id/btnDragList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/draggable_list" />

        <Button
            android:id="@+id/btnSmartEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/smart_edittext" />

        <Button
            android:id="@+id/btnVideoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_view" />

        <com.adrian.viewmodule.ExpandableTextView
            android:id="@+id/etv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="32dp"
            android:background="#22999999"
            android:padding="12dp"
            android:text="@string/poem_0"
            android:textSize="12dp"
            app:etv_MaxLinesOnShrink="2"
            app:etv_ToExpandHint="展开"
            app:etv_ToExpandHintColor="#13C60E"
            app:etv_EnableToggle="false"
            app:etv_ToShrinkHintShow="false"
            app:etv_InitState="shrink"
            app:etv_EnableExpandSelf="false"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>